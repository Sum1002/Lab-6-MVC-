@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Bookshop Management System</h1>
    <p class="lead">Manage your books, shops, customers, and orders efficiently.</p>
</div>

<div class="row mt-4">
    <div class="col-md-3">
        <div class="card text-white bg-primary mb-3">
            <div class="card-body">
                <h5 class="card-title">Total Books</h5>
                <p class="card-text display-6">@ViewBag.TotalBooks</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-success mb-3">
            <div class="card-body">
                <h5 class="card-title">Total Shops</h5>
                <p class="card-text display-6">@ViewBag.TotalShops</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-info mb-3">
            <div class="card-body">
                <h5 class="card-title">Total Customers</h5>
                <p class="card-text display-6">@ViewBag.TotalCustomers</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-warning mb-3">
            <div class="card-body">
                <h5 class="card-title">Total Orders</h5>
                <p class="card-text display-6">@ViewBag.TotalOrders</p>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5>Recent Orders</h5>
            </div>
            <div class="card-body">
                @if (ViewBag.RecentOrders != null && ViewBag.RecentOrders.Count > 0)
                {
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Order ID</th>
                                    <th>Customer</th>
                                    <th>Book</th>
                                    <th>Quantity</th>
                                    <th>Total Price</th>
                                    <th>Order Date</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in ViewBag.RecentOrders)
                                {
                                    <tr>
                                        <td>@order.OrderId</td>
                                        <td>@order.Customer.FullName</td>
                                        <td>@order.BookShop.Book.Title</td>
                                        <td>@order.Quantity</td>
                                        <td>@order.TotalPrice.ToString("C")</td>
                                        <td>@order.OrderDate.ToShortDateString()</td>
                                        <td>
                                            <span class="badge bg-@(order.OrderStatus == "Completed" ? "success" : order.OrderStatus == "Shipped" ? "info" : "warning")">
                                                @order.OrderStatus
                                            </span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted">No recent orders found.</p>
                }
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5>Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <a asp-controller="Books" asp-action="Create" class="btn btn-primary btn-lg w-100">
                            <i class="bi bi-plus-circle"></i> Add New Book
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a asp-controller="Shops" asp-action="Create" class="btn btn-success btn-lg w-100">
                            <i class="bi bi-shop"></i> Add New Shop
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a asp-controller="Customers" asp-action="Create" class="btn btn-info btn-lg w-100">
                            <i class="bi bi-person-plus"></i> Add New Customer
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a asp-controller="Orders" asp-action="Create" class="btn btn-warning btn-lg w-100">
                            <i class="bi bi-cart-plus"></i> Create New Order
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
