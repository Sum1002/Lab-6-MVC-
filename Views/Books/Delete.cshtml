@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model BookshopManagement.Models.Book

@{
    ViewData["Title"] = "Delete Book";
}

<h1>Delete Book</h1>

<div class="alert alert-warning">
    <h4>Are you sure you want to delete this book?</h4>
    <p>This action cannot be undone. All associated BookShop entries will also be deleted.</p>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4>@Model.Title</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Author)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Author)</dd>
                    
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ISBN)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.ISBN)</dd>
                    
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Price)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Price)</dd>
                    
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Genre)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Genre)</dd>
                    
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.PublicationYear)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.PublicationYear)</dd>
                    
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Description)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>
                </dl>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5>Actions</h5>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="BookId" />
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-danger">Delete Book</button>
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
