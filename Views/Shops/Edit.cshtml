@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model BookshopManagement.Models.Shop

@{
    ViewData["Title"] = "Edit Shop";
}

<h1>Edit Shop</h1>

<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ShopId" />
            
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" placeholder="e.g., Downtown Bookstore" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Location" class="control-label"></label>
                <input asp-for="Location" class="form-control" placeholder="e.g., Downtown, University District" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Address" class="control-label"></label>
                <textarea asp-for="Address" class="form-control" rows="2" placeholder="Full street address"></textarea>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" placeholder="e.g., (555) 123-4567" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" type="email" placeholder="e.g., info@bookstore.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Website" class="control-label"></label>
                <input asp-for="Website" class="form-control" type="url" placeholder="e.g., https://www.bookstore.com" />
                <span asp-validation-for="Website" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="OpeningYear" class="control-label"></label>
                <input asp-for="OpeningYear" class="form-control" type="number" min="1800" max="@DateTime.Now.Year" placeholder="e.g., 2020" />
                <span asp-validation-for="OpeningYear" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Shop Information</h5>
            </div>
            <div class="card-body">
                <p><strong>Name:</strong> The name of the bookshop</p>
                <p><strong>Location:</strong> General area or district</p>
                <p><strong>Address:</strong> Full street address</p>
                <p><strong>Phone:</strong> Contact phone number</p>
                <p><strong>Email:</strong> Contact email address</p>
                <p><strong>Website:</strong> Shop's website URL</p>
                <p><strong>Opening Year:</strong> Year the shop opened</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
